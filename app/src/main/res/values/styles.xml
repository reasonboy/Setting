<resources>
    <style name="SettingItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ZhDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogEditTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="NegativeDialogButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="DialogCheckBoxImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/check_off</item>
    </style>

    <style name="DialogCheckBoxTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="DialogCheckBoxDescribeStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="WifiDetailTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize19</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingTimeTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/time_dialog_textview_size</item>
        <item name="android:textSize">@dimen/time_dialog_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
