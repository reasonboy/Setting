<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="68dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <com.jzzh.setting.display.HomeScreenUserItem
                android:id="@+id/widget_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.jzzh.setting.display.HomeScreenUserItem
                android:id="@+id/default_app_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:textSize="@dimen/textSize19"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:text="@string/home_screen_widget_setting"/>

        <com.jzzh.tools.ZhCheckBox
            android:id="@+id/widget_setting_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="48dp"
            android:layout_gravity="right|center_vertical"/>
    </FrameLayout>

    <TextView
        android:id="@+id/widget_setting_describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize19"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="30dp"
        android:text="@string/home_screen_widget_setting_describe1"/>
</LinearLayout>