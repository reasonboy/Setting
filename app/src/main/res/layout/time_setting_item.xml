<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_item_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_setting_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize19"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/time_setting_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize19"
            android:visibility="gone" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/setting_sub_item_margin">

        <com.jzzh.tools.ZhCheckBox
            android:id="@+id/time_setting_item_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:res_off="@drawable/check_off"
            app:res_on="@drawable/check_on"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/time_setting_item_enter"
            android:layout_width="@dimen/setting_sub_item_icon_size"
            android:layout_height="@dimen/setting_sub_item_icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/setting_title_next"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>