<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/task_item_view"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_gravity="center_horizontal">

            <FrameLayout
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:background="@drawable/task_item_bg_rectangle">

                <ImageView
                    android:id="@+id/task_item_icon"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_gravity="center" />
            </FrameLayout>
            <ImageView
                android:id="@+id/task_item_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/ic_taskmanager_choice"/>
        </FrameLayout>

        <TextView
            android:id="@+id/task_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="18dp"
            android:textSize="18sp"
            android:ellipsize="end"
            android:singleLine="true"/>

    </LinearLayout>
</FrameLayout>