<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_sub_item_height">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_sub_item_margin"
        android:layout_centerVertical="true"
        android:text="@string/setting_network_wifi"
        android:textSize="@dimen/textSize19"/>

    <ImageView
        android:layout_width="@dimen/setting_sub_item_icon_size"
        android:layout_height="@dimen/setting_sub_item_icon_size"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/setting_sub_item_margin"
        android:background="@drawable/setting_title_next"/>
</RelativeLayout>