<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="33dp"
        android:background="@drawable/bg_thumbnail">
        <ImageView
            android:id="@+id/background_preview"
            android:layout_width="316dp"
            android:layout_height="420dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:text="@string/transparency"
        android:textColor="#000000"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:padding="28dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/background_setting_alpha_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:srcCompat="@drawable/setting_display_opacity_0" />

        <com.jzzh.tools.ZhSeekBar
            android:id="@+id/background_setting_alpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="28dp"
            app:bg_width="358dp"
            app:bg_height="2dp"
            app:thumb_size="13dp"
            app:touchable_height="30dp" />

        <ImageView
            android:id="@+id/background_setting_alpha_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:srcCompat="@drawable/setting_display_opacity_100" />
    </LinearLayout>

</LinearLayout>
