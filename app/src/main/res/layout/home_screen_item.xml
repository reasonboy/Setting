<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_screen_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="@dimen/textSize20"
        android:text="@string/home_screen_widget_style"/>

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="380dp"
        android:layout_marginTop="23dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/home_screen_item_preview"
            android:layout_gravity="center"
            android:layout_width="270dp"
            android:layout_height="360dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/display_def_apply_frame"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/home_screen_item_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/radio_button_select"/>
</LinearLayout>