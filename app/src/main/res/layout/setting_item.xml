<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_item"
    android:layout_width="@dimen/setting_item_width"
    android:layout_height="@dimen/setting_item_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/setting_item_icon"
            android:layout_width="@dimen/setting_item_icon_size"
            android:layout_height="@dimen/setting_item_icon_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/setting_wifi"/>

        <TextView
            android:id="@+id/setting_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_item_icon_space_text"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="@dimen/setting_item_text_size"
            android:text="@string/setting_network"/>
    </LinearLayout>
</RelativeLayout>