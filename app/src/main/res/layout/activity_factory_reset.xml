<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.jzzh.setting.TitleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_marginTop"
            app:title="@string/setting_device_reset"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/factory_reset_contents"
            android:textSize="@dimen/textSize19"
            android:lineSpacingExtra="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="52dp"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/factory_reset_btn"
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/display_def_apply_frame"
        android:layout_gravity="center_horizontal|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSize20"
            android:layout_gravity="center"
            android:text="@string/factory_reset_btn"/>
    </FrameLayout>

</FrameLayout>