<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/zh_dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/zh_dialog_title_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/bt_disconnect_device"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize20" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_disconnect_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/bt_disconnect_hint"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize20" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/dialog_button_divider_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:showDividers="middle">

        <Button
            android:id="@+id/bt_disconnect_dialog_cancle"
            style="@style/DialogButtonDividerStyle"
            android:text="@string/settings_cancel" />

        <Button
            android:id="@+id/bt_disconnect_dialog_confirm"
            style="@style/DialogButtonDividerStyle"
            android:text="@string/bt_confirm" />
    </LinearLayout>
</LinearLayout>