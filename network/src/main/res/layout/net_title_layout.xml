<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_layout_height">

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_layout_margin"
        android:textSize="@dimen/textSize21"
        android:textStyle="bold"
        android:layout_centerVertical="true"/>

    <View
        android:background="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/title_layout_underline_width"
        android:layout_height="@dimen/title_layout_underline_height" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/title_layout_margin">

        <ImageView
            android:id="@+id/title_function_1"
            android:layout_width="@dimen/title_layout_icon_size"
            android:layout_height="@dimen/title_layout_icon_size"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/title_function_2"
            android:layout_width="@dimen/title_layout_icon_size"
            android:layout_height="@dimen/title_layout_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/title_layout_icon_space"
            android:visibility="gone"/>

        <com.jzzh.tools.ZhCheckBox
            android:id="@+id/title_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/title_layout_icon_space"
            app:res_off="@drawable/switch_off"
            app:res_on="@drawable/switch_on"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/title_exit"
            android:layout_width="@dimen/title_layout_icon_size"
            android:layout_height="@dimen/title_layout_icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/title_layout_icon_space"
            android:background="@drawable/exit"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>